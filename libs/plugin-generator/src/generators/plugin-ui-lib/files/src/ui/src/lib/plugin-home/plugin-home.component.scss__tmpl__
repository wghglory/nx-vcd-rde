@import '@ccs/styles/css-utils';

:host {
   @include ccs-column-flex-container;

   .back-btn {
      // Use negative margin, to make the button properly aligned to the left side.
      // Using padding-left: 0 is another option, but it messes the focused state of the btn.
      margin-left: -$clr-element-spacing;
      align-self: flex-start;
   }

   h3 {
      margin-top: 0;
   }
}
