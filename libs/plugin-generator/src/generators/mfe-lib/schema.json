{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "MfeLib",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "mfe lib name?"
    },
    "domain": {
      "type": "string",
      "description": "Library domain.",
      "default": "",
      "x-prompt": "Library domain?"
    },
    "type": {
      "description": "Library type",
      "type": "string",
      "alias": "t",
      "x-prompt": {
        "message": "Select library type?",
        "type": "list",
        "items": [
          {
            "value": "data-access",
            "label": "Data Access"
          },
          {
            "value": "feature",
            "label": "Feature"
          },
          {
            "value": "ui",
            "label": "Ui"
          }
        ]
      }
    }
  },
  "required": ["name"]
}
