{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "PluginLib",
  "title": "",
  "type": "object",
  "properties": {
    "scope": {
      "type": "string",
      "description": "A scope for the lib.",
      "alias": "sc",
      "x-prompt": {
        "message": "What's the scope?",
        "items": ["shared", "core", "provider", "tenant"]
      }
    },
    "domain": {
      "type": "string",
      "description": "Library domain.",
      "x-prompt": "Library domain?"
    },
    "type": {
      "description": "Library type",
      "type": "string",
      "alias": "t",
      "x-prompt": {
        "message": "Select library type?",
        "type": "list",
        "items": [
          {
            "value": "all",
            "label": "All"
          },
          {
            "value": "data-access",
            "label": "Data Access"
          },
          {
            "value": "model",
            "label": "Model"
          },
          {
            "value": "util",
            "label": "Util"
          },
          {
            "value": "feature",
            "label": "Feature"
          },
          {
            "value": "ui",
            "label": "Ui"
          }
        ]
      }
    }
  },
  "required": ["type", "domain", "scope"]
}
