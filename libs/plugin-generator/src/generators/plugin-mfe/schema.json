{
   "$schema": "http://json-schema.org/schema",
   "cli": "nx",
   "$id": "ServiceMfe",
   "title": "CCS UI Plugin Generator",
   "type": "object",
   "properties": {
      "name": {
         "type": "string",
         "format": "html-selector",
         "description": "Enter a dns-compliant name, like my-service",
         "$default": {
            "$source": "argv",
            "index": 0
         },
         "x-prompt": "What name would you like to use? (i.e. my-service)"
      },
      "port": {
         "type": "number",
         "description": "Port for the standalone service app.",
         "default": 3010,
         "minimum": 3001,
         "maximum": 9000
      }
   },
   "required": ["name", "port"]
}
